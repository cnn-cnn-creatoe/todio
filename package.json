{
  "name": "todio",
  "private": true,
  "version": "1.1.1",
  "author": {
    "name": "nan",
    "email": "nan323660@gamil.com"
  },
  "description": "A beautiful desktop todo widget with glassmorphism design, smart due times, and smooth animations",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --port 5010 --strictPort",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://127.0.0.1:5010 && cross-env ELECTRON_START_URL=http://127.0.0.1:5010 electron .\"",
    "electron:build": "node create-ico.js && npm run build && electron-builder",
    "mobile:add": "node scripts/mobile-build.mjs add",
    "mobile:sync": "node scripts/mobile-build.mjs sync",
    "mobile:android": "node scripts/mobile-build.mjs android",
    "mobile:ios": "node scripts/mobile-build.mjs ios"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.4.11",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "framer-motion": "^12.29.0",
    "globals": "^16.5.0",
    "lucide-react": "^0.563.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.todio.app",
    "productName": "Todio",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "Todio-${version}-Windows.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Todio",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/Installer-Sidebar.png",
      "uninstallerSidebar": "build/Uninstaller-Sidebar.png",
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "artifactName": "Todio-${version}-macOS.${ext}"
    },
    "dmg": {
      "title": "Todio",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "artifactName": "Todio-${version}-Linux.${ext}"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "i18next": "^25.8.0",
    "react-i18next": "^16.5.3"
  }
}
